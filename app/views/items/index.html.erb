<!-- items index -->
<p>
    <%= link_to "Create a new listing", items_new_path %>
</p>

<!-- show all listings from all stores -->
<div class="container">
    <% @items.each do |item| %>
        <div class="item" id="index_item">
            <% if item.image.attached? %>
                <div>
                    <%= cl_image_tag(item.image.key, crop: :scale, width: 200, cloud_name: "dsrp2dd5i") %>
                </div>
            <% end %>
            <div class="container">
                <div class="item">
                    <h5><%= link_to item.title, item_path(item.id) %></h5>
                </div>
                <div class="item">
                    <h3>$<%= "%.2f" % item.price %></h3>
                </div>
            </div>
        </div>
    <% end %>
</div>
<div>
    <%= will_paginate @items %>
</div>
